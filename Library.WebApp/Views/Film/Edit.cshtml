@model FilmDto

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="DigitalEntityId" />

    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label"><b>Tytuł:</b></label>
        <div><span asp-validation-for="Title" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" />
        </div>
    </div>

    <hr />
    <b>Autor</b>:
    <div class="form-group row">
        <label asp-for="DirectorFirstName" class="col-sm-2 col-form-label">Imię:</label>
        <div><span asp-validation-for="DirectorFirstName" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="DirectorFirstName" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DirectorFirstName" class="col-sm-2 col-form-label">Nazwisko:</label>
        <div><span asp-validation-for="DirectorFirstName" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="DirectorFirstName" class="form-control" />
        </div>
    </div>

    <hr />

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"><b>Opis:</b></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CompanyName" class="col-sm-2 col-form-label"><b>Wydawnictwo:</b></label>
        <div><span asp-validation-for="CompanyName" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="CompanyName" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Length" class="col-sm-2 col-form-label"><b>Długość (min):</b></label>
        <div><span asp-validation-for="Length" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="Length" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="PremiereDate" class="col-sm-2 col-form-label"><b>Data wydania:</b></label>
        <div><span asp-validation-for="PremiereDate" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="PremiereDate" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Tags" class="col-sm-2 col-form-label"><b>Tagi (oddziel przecinkami):</b></label>
        <div><span asp-validation-for="Tags" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="Tags" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ImageFormFile" class="col-sm-2 col-form-label"><b>Obraz:</b></label>
        <div><span asp-validation-for="ImageFormFile" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="ImageFormFile" type="file" />
        </div>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Zapisz</button>
    </div>

</form>
