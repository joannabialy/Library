@model Library.Domain.Entities.Book

<style>
    img {
        width: 100%;
        max-width: 300px;
    }
</style>

<div class="row">
    <div class="col-1">

    </div>

    <div class="col-4">
        @{
        var base64 = Convert.ToBase64String(Model.Image);
        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        }

        <img src="@imgSrc" />
    </div>

    <div class="col-5">

        <h2 class="col-sm-10">@Model.Title</h2>

        <hr />

        <div class="col-sm-10">Książka</div>

        <hr />

        <div class="col-sm-10">
            @Model.Description
        </div>

        <hr />

        <div class="col-sm-10">
            Data wydania: @Model.PublicationDate.ToShortDateString()
        </div>

        <div class="col-sm-10">
            Długość: @Model.Length stron
        </div>

        <div class="col-sm-10">
            Wydawnictwo: @Model.Company.Name
        </div>

        <div class="col-sm-10">
            ISBN: @Model.ISBN
        </div>

        <div class="col-sm-10">
            Autor: @Model.Author.FirstName @Model.Author.LastName
        </div>

        <hr />

        <div class="col-sm-10">
            Spis treści:
        </div>

        <hr />

        <div class="col-sm-10">
            @foreach (var tag in @Model.Tags)
            {

                <a asp-action="Index"
                   asp-controller="DigitalEntity"
                   asp-route-tagId="@tag.Id">@tag.Name </a>
            }
        </div>
    </div>
</div>
